{
  "name": "@projectstorm/dynamouse",
  "license": "MIT",
  "main": "dist/main.js",
  "description": "Mouse and Display assignment for mac",
  "version": "0.2.0",
  "author": {
    "name": "Dylan Vorster",
    "url": "dylanvorster.com"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "electron .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx}\"",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "prepare": "rm -rf node_modules/electron/dist && node node_modules/electron/install.js"
  },
  "build": {
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "media/*",
      "dist/*"
    ],
    "productName": "DynaMouse",
    "appId": "projectstorm.dynamouse",
    "mac": {
      "icon": "./media/icon.png",
      "category": "public.app-category.utilities"
    }
  },
  "dependencies": {
    "@jitsi/robotjs": "^0.6.13",
    "auto-launch": "^5.0.6",
    "winston": "^3.11.0",
    "electron-json-storage": "^4.6.0",
    "lodash": "^4.17.21",
    "node-hid": "^3.0.0",
    "usb": "^2.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.5",
    "@types/electron-json-storage": "^4.5.4",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.10",
    "@types/uuid": "^9.0.8",
    "source-map-support": "^0.5.21",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
